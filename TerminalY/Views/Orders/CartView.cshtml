@model TerminalY.Models.Cart


<ul class="product-list">
    <li>
        @foreach (var item in Model.CartItems)
        {
            <div class="pl-thumb">
                @if (item.Product.Image != null)
                {
                    string img = item.Product.Image;
                    <img src="@img" height="50px" width="50px">
                }
                else
                {
                    <img src="~/img/cart/1.jpg" alt="No picture">
                }
            </div>
            <h6>@item.Product.Name</h6>
            <p>$@item.Product.Price,00</p>
        }
    </li>
</ul>
<ul class="price-list">
    <li>Total<span>$@Model.TotalPrice,00</span></li>
    <li>Shipping<span>free</span></li>
    <li class="total">Total<span>@Model.TotalPrice</span></li>
</ul>