@model TerminalY.Models.Account

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label asp-for="Name"><i class="fas fa-user-alt"></i></label>
                        <input type="text" asp-for="Name" id="name" placeholder="Your Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Username"><i class="fas fa-envelope"></i></label>
                        <input asp-for="Username" id="email" placeholder="Your Email" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="fas fa-lock"></i></label>
                        <input asp-for="Password" id="pass" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="fas fa-redo-alt"></i></label>
                        <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" />
                        <span>@TempData["Error"]</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender"><i class="fas fa-venus-mars"></i></label>
                        &nbsp;  &nbsp;  &nbsp;
                        <select asp-for="Gender" name="gender" id="gender" placeholder="Your gender">
                            <option value="" selected disabled hidden>---Select---</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BirthDate"><i class="fas fa-birthday-cake"></i></label>
                        <input asp-for="BirthDate" asp-area="" id="birthdate" placeholder="Your birth date" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree_term" id="agree-term" class="agree-term" value="true" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="https://www.termsfeed.com/live/e5e0fcee-4152-4822-ac7f-2744250c5dba" onClick="MyWindow=window.open('https://www.termsfeed.com/live/e5e0fcee-4152-4822-ac7f-2744250c5dba','MyWindow','width=600,height=300'); return false;" class="term-service">Terms of service</a></label>
                        <span>@TempData["TermsError"]</span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/img/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="Login" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>