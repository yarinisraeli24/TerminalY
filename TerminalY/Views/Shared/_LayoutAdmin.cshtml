                       </form>
                   </div>
                   <a href="#" class="sign_in"><i class="fas fa-user-circle"></i></a>
               </div>
           </nav>
       </header>
        -->
    <div class="container">
        <main role="main" class="body-wrapper pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
